<p id="notice"><%= notice %></p>

<h1>Категории товаров</h1>

<table>
    <% @categories.each do |category| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even')%>">
      <div class="entry">
        <td>
          <% if category.image_url %>
            <%= image_tag(category.image_url, size: "160x90") %>
          <% end %>
        <td>
        <h3><%= link_to "#{category.name}", products_path(search: category.name)  %></h3>
      </div>

    <% end %>
</table>